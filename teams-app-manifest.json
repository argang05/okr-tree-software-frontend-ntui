{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.14/MicrosoftTeams.schema.json",
  "manifestVersion": "1.14",
  "version": "1.0.0",
  "id": "{{YOUR_MICROSOFT_APP_ID}}",
  "packageName": "com.okrtree.app",
  "developer": {
    "name": "OKR Tree",
    "websiteUrl": "https://your-app-url.com",
    "privacyUrl": "https://your-app-url.com/privacy",
    "termsOfUseUrl": "https://your-app-url.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "OKR Tree",
    "full": "OKR Tree - Objectives and Key Results"
  },
  "description": {
    "short": "Track your objectives and key results with OKR Tree",
    "full": "OKR Tree helps your organization track objectives and key results. Visualize your organization's goals and track progress in a hierarchical tree structure."
  },
  "accentColor": "#4F46E5",
  "staticTabs": [
    {
      "entityId": "okr-tree-dashboard",
      "name": "Dashboard",
      "contentUrl": "https://your-app-url.com/",
      "websiteUrl": "https://your-app-url.com/",
      "scopes": ["personal"]
    },
    {
      "entityId": "okr-tree-my-tasks",
      "name": "My Tasks",
      "contentUrl": "https://your-app-url.com/my-tasks",
      "websiteUrl": "https://your-app-url.com/my-tasks",
      "scopes": ["personal"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "your-app-url.com",
    "*.your-app-url.com"
  ],
  "webApplicationInfo": {
    "id": "{{YOUR_MICROSOFT_APP_ID}}",
    "resource": "https://your-app-url.com"
  }
} 